{% extends 'base.html.twig' %}

{% block title %}Create New Player{% endblock %}

{% block body %}
{% include 'components/nav.html.twig' %}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h4>Ajout d'un joueur</h4>
            <form action="" method="post">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.nationalite, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.parcours, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.nombreBut, {'attr': {'class': 'form-control'}}) }}
                </div>             
        </div>
        <div class="col-lg-6" style="margin-top: 20px;">
            <div class="form-group">
                {{ form_row(form.club, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.national, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-primary form-control">Ajouter</button>
            {{ form_end(form) }}
        </form>
        </div>
    </div>
</div>
{% endblock %}
