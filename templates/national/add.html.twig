{% extends 'base.html.twig' %}

{% block title %}Create New National
{% endblock %}

{% block body %}
	<h3>Create New National</h3>
	<div class="container">
		<h1 class="mt-5">Create New National</h1>
		<form action="{{ path('add_national') }}" method="post" class="mt-3">
			<div class="form-group">
				<label for="name">National Name</label>
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
{% endblock %}

